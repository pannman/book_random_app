<%= link_to "履歴を見る", random_books_path, method: :get %>
<h1>本日の本を決めよう！</h1>
<% if @book %>
  <p>今日の本</p>
  <%= @book.title %>
  <%= link_to image_tag(@book.img),random_book_path(@book) %>
<% end %>
<%= form_for(:random_books , url: random_path)  do |f| %>
    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
  <%= f.label :キーワードを入力してください %>
  <%= f.text_field :keyword %>
  <%= f.submit "今日の本を決める" %>
<% end %>
